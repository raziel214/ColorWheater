<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@drawable/bg_gradient_blue">

    <TextView
        android:id="@+id/dayliListTitle"
        style="@style/mainFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Today" />

    <TextView
        style="@style/mainFont"
        android:textSize="18dp"
        android:id="@+id/dayliListDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Party Cloudy in the  Morning" />

    <TextView
        style="@style/mainFont"
        android:textSize="18dp"
        android:id="@+id/dayliListProbability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Rain Probability 24%" />


</LinearLayout>